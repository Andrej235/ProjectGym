<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Pages="clr-namespace:AppProjectGym.Pages"
             x:Class="AppProjectGym.Pages.LoginPage"
             Title="LoginPage"
             x:DataType="Pages:LoginPage">
    <VerticalStackLayout>
        <Entry x:Name="emailInputField" Placeholder="Email"/>
        <Entry x:Name="passwordInputField" Placeholder="Password"/>
        <Button Clicked="OnLoginSubmited"/>
    </VerticalStackLayout>
</ContentPage>